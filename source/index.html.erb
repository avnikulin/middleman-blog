---
title: Home
pageable: true
per_page: 5
---
																					
			      <div id="home">
        <h1 class="pageTitle">Recent Posts</h1>
        <ul class="posts noList">

<% page_articles.each_with_index do |article, i| %>
	<li>
		<span class="date"><%= article.date.strftime('%B %e, %Y') %></span>
  <h3><%= link_to article.title, article %></h3>
  <!-- use article.summary(250) if you have Nokogiri available to show just
       the first 250 characters -->
	<%= article.summary %>
	<%= link_to 'Read moreâ€¦', article %>
</li>
<% end %>
</ul>

<!-- Pagination links -->
        <div class="pagination">
					
					 <% if paginate && num_pages > 1 %>
					 	 <% if prev_page %><%= link_to 'Newer Posts', prev_page, class: 'previous button__outline' %>
					   <% end %>
						 <% if next_page %><%= link_to 'Older Posts', next_page, class: 'next button__outline' %>
						 <% end %>
					 <% end %>
                
        </div>
      </div>
		</div>
	</div><!-- end .content -->